{
  "manifest_version": 2,

  "name": "To buy or not to buy",
  "description": "This extension shows if a product on the ecommerce site is worth buying",
  "version": "0.1",

  "background": {
    "scripts": ["jquery.js","background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_icon": "thumbsup.png",
    "default_popup": "popup.html"
  },
  // "content_scripts": [
  //   {
  //     "matches": ["http://www.snapdeal.com/*"],
  //     "js": ["jquery.js", "script.js"]
  //   }
  // ],
  "permissions": [
    "tabs",
    "activeTab",
    "http://*/*",
    "https://*/*"
  ]
}
