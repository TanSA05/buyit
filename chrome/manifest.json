{
  "manifest_version": 2,

  "name": "Should I buy it",
  "description": "This extension shows if a product on the ecommerce site is worth buying",
  "version": "0.1",

  "background": {
    "scripts": ["jquery.js","background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "http://*/*",
    "https://*/*"
  ]
}
